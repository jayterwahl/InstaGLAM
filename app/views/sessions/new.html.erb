<div class="splash_outer">
  <center>
    <div class="vert_center">

      <div class="logo_outer">
        <div class="star_div">
          <div class="splash_logo">
          </div>
        </div>
      </div>

      <h1>InstaGlam</h1>
      <div class="login_slogan">
        Let your glamorous life begin
      </div>
      <form action="<%= session_url %>" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="text"
                  name="user[username]"
                  class="login_username"
                  placeholder='Username'
                  value="">
          <div class="bottom_pad"></div>
          <input type="password"
                   name="user[password]"
                   placeholder='Password'
                   value=""
                   class="bottom_pad">
          <div class="bottom_pad"></div>
          <input type="submit" value="Sign In!" class="login" >
          <div class="bottom_pad"></div>
          <div class="bottom_pad"></div>
          <div class="bottom_pad"></div>
          <div class="bottom_pad"></div>


      </form>
          <div class="guest_pad"> </div>
          <div class="login_text">

            <div class="login_switch_div">
              <div class="registered_text">
                New around here?
              </div>
              <div class="sign_up_link">
                <%= link_to "Sign Up!", new_user_url %>
              </div>
            </div>

            <div class="login_render">
              <%= render "layouts/guest" %>
            </div>

          </div>
    </div>
  </center>
</div>
