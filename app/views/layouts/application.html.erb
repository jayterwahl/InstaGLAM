<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application'%>
  <link href='//fonts.googleapis.com/css?family=Pacifico|Montserrat:400|Raleway:300,500' rel='stylesheet' type='text/css'>  <title>InstaGlam</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>

  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript">
  </script>

  <script type="text/javascript">
    window.CLOUDINARY_OPTIONS = {
      upload_preset: "<%= ENV['UPLOAD_PRESET'] %>",
      cloud_name: "<%= ENV['CLOUD_NAME'] %>",
    }
    </script>
</head>
<body id="parallax">

<%= render "layouts/errors" %>
<section>

<%= yield %>

</section>

</body>
</html>

<script>
var parallax = document.getElementById("parallax");
var speed = -1;

window.onscroll = function() {
  var yOffset = window.pageYOffset;
  parallax.style.backgroundPosition = "0px " + (yOffset / speed) + "px";
}
  </script>
